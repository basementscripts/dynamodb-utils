{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "target": "es2017",
        // "sourceMap": true,
        "outDir": "./lib",
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "node"
        ],
        "inlineSourceMap": true
    },
    "include": [
        "src/**/*"
    ]
}
